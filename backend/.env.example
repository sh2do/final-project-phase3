# Backend Environment Variables
#
# A SECRET_KEY is required for JWT token encryption.
# Generate a strong one, e.g., using: python -c 'import os; print(os.urandom(32).hex())'
SECRET_KEY="your-super-secret-key"

# Database connection string
# Examples:
#   SQLite (for local development, a file named sql_app.db will be created)
#   DATABASE_URL="sqlite:///./sql_app.db"
#
#   PostgreSQL:
#   DATABASE_URL="postgresql://user:password@host:port/dbname"
DATABASE_URL="sqlite:///./sql_app.db"

# CORS origins for your frontend application
# Separate multiple origins with commas.
# Example: BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# FastAPI application name
APP_NAME="AnimeCollectionTracker"